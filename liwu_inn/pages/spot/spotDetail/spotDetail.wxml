<!--pages/inn/innDetail/innDetail.wxml-->
<view class="page">
  <map id="map" longitude="{{item.longitude}}" latitude="{{item.latitude}}" scale="14" bindcontroltap="controltap"
    bindmarkertap="markertap" markers="{{markers}}" polyline="{{polyline}}" bindregionchange="regionchange" show-location
    style="width: 100%; height: 300px;"></map>

  <view style="margin: 10rpx 10rpx 10rpx 10rpx;">

    <view class="title">{{item.title}}</view>

    <view class="strategy" style="white-space:pre-line">{{item.strategy}}</view>
  </view>
</view>