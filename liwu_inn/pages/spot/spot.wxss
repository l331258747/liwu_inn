/* pages/inn/inn.wxss */

.card {
  margin: 20px; 
  position: relative;
}

.page{
  padding-bottom: 10px;
}


.image {
  width: 100%;
  height: 200px;
  border-radius: 20px;
  background-color: #eeeeee;
  box-shadow: 4px 5px 5px gray;
  
}

.title {
  color: #ffffff;
  width: 97%;
  height: 40px;
  position: absolute;
  bottom: 3px;
  z-index: 1;
  background-color: #666f6f6f;
  font-size: 16px;
  padding-left: 10px;
  border-radius: 0px 0px 20px 20px;
  display: flex;
  align-items: center;
  
}